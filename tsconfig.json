{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@agents/*": ["./agents/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@tests/*": ["./__tests__/*"],
      "@mcp-servers/*": ["./mcp-servers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "docs/archive/**",
    "__tests__/e2e/**",
    "__tests__/templates/**",
    "playwright.config.ts",
    "__tests__/unit/app/**",
    "__tests__/unit/hooks/**",
    "__tests__/unit/api/**",
    "mcp-servers/**",
    "lib/task-runner/**",
    "lib/config/chatkit-workflow.ts",
    "lib/mcp/**",
    "lib/services/chat-agent-service.ts",
    "lib/validations/rfp-form-schema.ts",
    "lib/conversation/**",
    "app/api/webhooks/route.ts",
    "scripts/seed-database.ts",
    "scripts/test-supabase-connection.ts",
    "scripts/test/**",
    "components/chatkit-widget.tsx",
    "components/tool-call-indicator.tsx",
    "components/workflow-visualization.tsx",
    "components/chat-interface.tsx",
    "components/rfp/**",
    "hooks/use-chat-agent.ts",
    "scripts/execute-task.ts",
    "app/page.tsx",
    ".context/**",
    "app/_archived/**"
  ]
}
