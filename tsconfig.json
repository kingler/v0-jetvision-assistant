{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@agents/*": ["./agents/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@tests/*": ["./__tests__/*"],
      "@mcp-servers/*": ["./mcp-servers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "__tests__/e2e/**",
    "__tests__/templates/**",
    "playwright.config.ts",
    "__tests__/unit/app/**",
    "__tests__/unit/hooks/**",
    "__tests__/unit/api/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
