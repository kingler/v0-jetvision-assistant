# ============================================
# Jetvision AI Assistant - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values

# --------------------------------------------
# Clerk Authentication
# --------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_WEBHOOK_SECRET=whsec_your_secret_here

# --------------------------------------------
# Supabase Database
# --------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# --------------------------------------------
# OpenAI
# --------------------------------------------
OPENAI_API_KEY=sk-proj-your_key_here
OPENAI_ORGANIZATION_ID=org-your_org_here

# --------------------------------------------
# Redis (Choose one option)
# --------------------------------------------
# Option 1: Local Redis (Development)
REDIS_URL=redis://localhost:6379

# Option 2: Upstash Redis (Production)
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# --------------------------------------------
# Google APIs (Gmail + Sheets) - Optional
# --------------------------------------------
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here


# --------------------------------------------
# Sentry Error Tracking - Optional
# --------------------------------------------
SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project_id
SENTRY_ORG=your_org_here
SENTRY_PROJECT=jetvision-assistant
SENTRY_AUTH_TOKEN=your_auth_token_here

# --------------------------------------------
# Application Settings
# --------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
