# OpenAI API Configuration
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION_ID=org-...

# ChatKit Configuration
# Create a workflow at https://platform.openai.com/agent-builder
CHATKIT_WORKFLOW_ID=wf_...

# Redis Configuration (for task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MCP Server Configuration (ONEK-79)
MCP_AVINODE_COMMAND=node
MCP_AVINODE_ARGS=mcp-servers/avinode-mcp-server/dist/mcp-servers/avinode-mcp-server/src/index.js
MCP_SERVER_TIMEOUT=10000           # Server spawn timeout in milliseconds

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Clerk Authentication (optional)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_...
CLERK_SECRET_KEY=sk_...

# Avinode API Configuration
# Mock Mode Toggle (ONEK-77)
USE_MOCK_AVINODE=true          # Set to 'true' for mock mode, 'false' for real API
MOCK_API_DELAY_MS=500          # Simulated API delay in milliseconds (300-800 recommended)

# Real Avinode API (only needed when USE_MOCK_AVINODE=false)
AVINODE_API_KEY=your-avinode-key
AVINODE_API_URL=https://api.avinode.com

# Gmail API (for email sending)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-refresh-token

# Google Sheets API (for client database)
GOOGLE_SHEETS_CLIENT_EMAIL=your-service-account-email
GOOGLE_SHEETS_PRIVATE_KEY=your-private-key
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
